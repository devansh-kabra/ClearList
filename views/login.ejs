<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>ClearList</title>

        <!--icon-->
        <link rel="icon" type="png" href="favicon.png" />

        <!-- fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        
        <!-- svg -->
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,100..700,0,200" rel="stylesheet" />

        <!-- css -->
        <style>
            html {
                font-size: clamp(4px, 1vw + 6px, 16px);
                height: 100%;
            }

            @media (max-width: 300px) {
                html {
                    font-size: clamp(4px, 1vw + 5px, 16px);
                }
            }

            body {
                background: linear-gradient(0deg, #a683e3 , #e4e9fd );
                background-size: cover;
                background-repeat: no-repeat;
                
                margin: 0;
                height: 100dvh;
                width: 100vw;

                display: flex;
                align-items: center;
                justify-content: center;
            }

            body > div {
                height: fit-content;
                width: fit-content;
                padding: 1rem;
                background-color: white;
                box-shadow: 0 0 2rem #8351cd;
            }

            form {
                display: flex;
                flex-direction: column;
                height: 100%;
                align-items: center;
                gap: 0.75rem;
            }

            label {
                font-family: 'Noto Serif', 'sans-serif';
                font-size: 1.25rem;
                margin-bottom: 0.125rem;
                display: flex; /**for svg**/
                align-items: center;
                gap: 0.25rem;
            }

            input {
                margin-top: 0.125rem;
                font-size: 1rem;
                min-width: 25rem;
                font-family: 'Noto Serid', 'sans-serif';
            }

            span#password-visibility {
                font-size: 1.25rem;
                cursor: pointer;
            }

            p {
                color: red;
                margin: 0;
                font-size: 1rem;
                margin-top: 0.2em;
            }

            div.btn-setup {
                display: flex;
                width: 100%;
                position: relative;
            }

            div.btn-setup > a {
                all: unset;
                cursor: pointer;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            div.btn-setup > a > span {
                font-size: 1.25rem;
            }

            div.btn-setup > button {
                align-self: center;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

            button {
                font-size: 1rem;
                width: 6rem;
                border: 0.0675rem solid black;
                border-radius: 0.5rem;
                background-color: white;
                text-align: center;
            }

            button:hover {
                background-color: #8351cd;
                color: white;
            }

            button:active {
                transform: scale(0.98);
                background-color: #8351cd
            }

        </style>
    </head>
    <body>
        <div>
            <form action="/login" method="post">
                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required autofocus>
                    <% if (locals.userExist === false) { %>
                        <p>User Not Found</p>
                    <%  } %>
                </div>
                <div>
                    <label for="password">
                        Password
                        <span class="material-symbols-outlined" id="password-visibility">visibility_off</span>
                    </label>
                    <input type="password" id="password" name="password" required>
                    <% if (locals.passwordIncorrect) { %>
                        <p>Incorrect Password</p>
                    <%  } %>
                </div>
                <div class="btn-setup">
                    <a href="/"><span class="material-symbols-outlined">arrow_left_alt</span></a>
                    <button type="submit">Login</button>
                </div>
            </form>
        </div>

        <script>
            if (document.querySelector("p")) {
                document.getElementById("username").value = <%- JSON.stringify(username) %>;
                document.getElementById("password").value = <%- JSON.stringify(password) %>;
            }

            document.getElementById("password-visibility").addEventListener("click", (event) => {
                const password_input = document.getElementById("password");

                if (password_input.getAttribute("type") === "password") {
                    event.target.innerHTML = "visibility";
                    password_input.setAttribute("type", "text");
                } else {
                    event.target.innerHTML = "visibility_off";
                    password_input.setAttribute("type", "password");
                }
            });
        </script>
    </body>
</html>